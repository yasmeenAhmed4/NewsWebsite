@model IEnumerable<Authors>

<a class="btn btn-primary" href="@Url.Action("CreateAuthor","AuthorDashboard")">Create</a>

<a class="btn btn-primary" href="@Url.Action("Index","Dashboard")">Go To News</a>


<div class="card-body p-0">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 10px">@Html.DisplayNameFor(model => model.Id)</th>
                <th>Name</th>
                <th>Actions</th>
                <th style="width: 40px"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (Authors P in Model)
                {
                    <tr>
                        <td>@P.Id</td>
                        <td>@P.Name</td>

                        <td>
                            <div class="d-inline-flex">
                                <a href="/AuthorDashboard/Edit/@P.Id" class="mr-2"><button type="button" class="btn btn-block btn-primary">Edit</button></a>
                                <a type="button" class="btn btn-block btn-danger" href="@Url.Action("Delete", "AuthorDashboard",
                                new { id = P.Id })" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center">
                    <td colspan="3">No Authors found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

